<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#96000000" 
    android:orientation="vertical" 
    android:padding="5dip" >
    
  <TextView 
	    android:id="@+id/entry_author"        android:layout_width="wrap_content"
		android:layout_height="50dip" 			android:textSize="20sp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"	android:textColor="#ffffff"/>   

  <TextView 
	    android:id="@+id/entry_comment"        android:layout_width="wrap_content"
		android:layout_height="50dip" 			android:textSize="20sp"
		android:layout_alignParentBottom="true"
		android:layout_below="@id/entry_author"
		android:layout_alignParentLeft="true"	android:textColor="#ffffff"/>     

</RelativeLayout>